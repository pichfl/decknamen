<button
  type="button"
  disabled={{this.isDisabled}}
  class={{if (or @isLead this.isUncovered) this.typeClass}}
  local-class="
  card
  {{if @isLead "lead" "player"}}
  {{if this.isSelected "selected"}}
  {{if this.isCovered "covered" "uncovered"}}
  "
  {{on "click" this.onClick}}
>
  {{#if this.isSelected}}
    <i local-class="target bottom">
      <svg width="10" height="5" viewBox="0 0 10 5">
        <path d="M 0,5 L 10,5 L 5,0 z" fill="currentColor"></path>
      </svg>
    </i>
    <i local-class="target left">
      <svg width="5" height="10" viewBox="0 0 5 10">
        <path d="M 0,0 L 5,5 L 0,10 z" fill="currentColor"></path>
      </svg>
    </i>
    <i local-class="target top">
      <svg width="10" height="5" viewBox="0 0 10 5">
        <path d="M 0,0 L 10,0 L 5,5 z" fill="currentColor"></path>
      </svg>
    </i>
    <i local-class="target right">
      <svg width="5" height="10" viewBox="0 0 5 10">
        <path d="M 5,0 L 5,10 L 0,5 z" fill="currentColor"></path>
      </svg>
    </i>
  {{/if}}

  <span local-class="inner">
    {{#if this.isCovered}}
      <span local-class="word">
        {{@card.word}}
      </span>
    {{/if}}
  </span>
</button>